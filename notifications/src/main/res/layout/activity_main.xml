<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/notify"
        android:text="notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnUpdateNotify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="update notification"
        />

    <Button
        android:id="@+id/btnOpenExtendedLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="notify with extended"
        />

    <Button
        android:id="@+id/btnShowDynamicProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show determinate progress"/>

    <Button
        android:id="@+id/btnShowStaticProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show indeterminate progress"/>

    <Button
        android:id="@+id/btnShowCustomNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show custom notification"/>

</LinearLayout>
