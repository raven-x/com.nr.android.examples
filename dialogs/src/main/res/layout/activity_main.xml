<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                tools:context=".MainActivity">

    <Button
        android:id="@+id/btnShowSimpleDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show message dialog"/>

    <Button
        android:id="@+id/btnShowListDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show list dialog"/>

    <Button
        android:id="@+id/btnShowPersistentList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show persistent list"/>

    <Button
        android:id="@+id/btnShowCustomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show custom layout"/>

    <Button
        android:id="@+id/btnShowEmbedded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show embedded"
        />

</LinearLayout>
